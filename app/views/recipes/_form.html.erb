<div class="col-md-12">

<%= form_for @recipe, class:"form-horizontal"  do |f| %>

<% if @recipe.errors.any? %>
<div id="error_explanation">
  <div class ="alert alert-danger"><h4><%= pluralize(@recipe.errors.count, "error") %> prohibited from being saved:</h4>

    <ul>
      <% @recipe.errors.full_messages.each do |message| %>
    <h4>  <li><%= message %></li></h4>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

  <div class="form-group">
    <div class="field">
      <div class="control-label">
        <%= f.label :title %>
      </div>
    </div>
    <%= f.text_field :title, class:"form-control" %>
  </div>

  <div class="form-group">
    <div class="field">
      <div class="control-label">
        <%= f.label :description %>
      </div>
    </div>
    <%= f.text_area :description, class:"form-control description" %>
  </div>

  <div class="form-group">
    <div class="field">
      <div class="control-label">
        <%= f.label :instruction %>
      </div>
    </div>
    <div>
      <%= f.text_area :instruction, class:"form-control instruction" %>
    </div>
  </div>

  <div class="form-group">
    <div class="action">
      <%= f.submit class:"btn btn-primary"  %>
    </div>
  </div>

<% end %>
</div>
